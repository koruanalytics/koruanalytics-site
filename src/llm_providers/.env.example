# =============================================================================
# OSINT Per√∫ 2026 - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# LLM PROVIDER SELECTION
# =============================================================================
# Options: 'anthropic' (local/dev) or 'azure_openai' (production)
LLM_PROVIDER=anthropic

# =============================================================================
# ANTHROPIC (Local Development)
# =============================================================================
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# Optional: Override default model (claude-3-5-haiku-20241022)
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# AZURE OPENAI (Production)
# =============================================================================
# Your Azure OpenAI resource endpoint
AZURE_OPENAI_ENDPOINT=https://azure-openai-osint-peru-2026.openai.azure.com/

# API Key (not needed if using Managed Identity in Azure)
AZURE_OPENAI_API_KEY=your-azure-openai-key

# Deployment name (the name you gave when deploying the model)
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# Optional: API version (default: 2024-08-01-preview)
# AZURE_OPENAI_API_VERSION=2024-08-01-preview

# =============================================================================
# NEWS API (Data Ingestion)
# =============================================================================
# NewsAPI.ai / EventRegistry API key
# Get yours at: https://newsapi.ai/
NEWSAPI_AI_KEY=your-newsapi-ai-key

# =============================================================================
# DATABASE
# =============================================================================
# Local DuckDB path
DB_PATH=data/osint_dw.duckdb

# Azure PostgreSQL (Production)
# POSTGRES_HOST=your-server.postgres.database.azure.com
# POSTGRES_DB=osint_peru
# POSTGRES_USER=osint_admin
# POSTGRES_PASSWORD=your-password
# POSTGRES_SSLMODE=require

# =============================================================================
# AZURE STORAGE (Production - for raw file backup)
# =============================================================================
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=stosintperu2026;...
# Or use Managed Identity (no connection string needed)

# =============================================================================
# AZURE MAPS (Geocoding)
# =============================================================================
# AZURE_MAPS_KEY=your-azure-maps-key

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
